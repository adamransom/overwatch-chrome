{
  "manifest_version": 2,

  "name": "Overwatch",
  "version": "0.1",
  "description": "Pop out videos from the browser.",
  "author": "Adam Ransom",
  "icons": { 
    "16": "images/overwatch_16.png",
    "48": "images/overwatch_48.png",
    "128": "images/overwatch_128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "images/overwatch_19.png",
      "38": "images/overwatch_19@2x.png"
    },
    "default_title": "Open this video with Overwatch"
  },
  "permissions": [ "declarativeContent" ],
  "minimum_chrome_version": "33"
}
